<launch>

    <arg name = "gui" default="false"/>



    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find pupperv2_description)/urdf/pupper_test.urdf.xacro' " />
    <node name="pupperv2_robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <param name="publish_frequency" type="double" value="30.0" />
        <param name="ignore_timestamp" type="bool" value="true" />
    </node>

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find pupperv2_description)/rviz/urdf_viewer.rviz -l" />

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="/use_gui" value="$(arg gui)"/>
        <rosparam param="/joint_states">
        </rosparam>
    </node>
</launch>